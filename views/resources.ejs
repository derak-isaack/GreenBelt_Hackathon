<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Forest Tracker' %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dark">
  <%- include('partials/header', { currentPath: typeof currentPath !== 'undefined' ? currentPath : '/' }) %>
  
  <main class="flex-1">
<div class="relative min-h-screen bg-light-surface">
  <div class="relative pt-32 pb-20 px-4">
    <div class="container mx-auto max-w-7xl">
      <div class="section-header mb-12">
        <h1 class="section-title">Educational Resources</h1>
        <p class="section-description">
          Access comprehensive materials on forest conservation, policies, and best practices for protecting our natural ecosystems.
        </p>
      </div>

      <div id="resourcesContainer" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="text-center py-12">
          <span class="spinner"></span>
          <p class="text-muted-foreground mt-4">Loading resources...</p>
        </div>
      </div>
    </div>
  </div>
</div>
  </main>
  
  <%- include('partials/footer') %>
  
  <script src="/js/forest-background.js"></script>
  <script>
    // Check authentication on page load
    (function() {
      const authToken = localStorage.getItem('authToken');
      const sessionId = document.cookie.split('; ').find(row => row.startsWith('sessionId='));
      
      if (!authToken && !sessionId) {
        // No authentication, redirect to login
        const currentPath = window.location.pathname;
        window.location.href = '/login?redirect=' + encodeURIComponent(currentPath);
        return;
      }
    })();

    async function loadResources() {
      try {
        const authToken = localStorage.getItem('authToken');
        const headers = {
          'Content-Type': 'application/json',
        };
        
        if (authToken) {
          headers['Authorization'] = 'Bearer ' + authToken;
        }
        
        const response = await fetch('/api/research/resources', {
          headers: headers
        });
        
        if (!response.ok) {
          if (response.status === 401) {
            document.getElementById('resourcesContainer').innerHTML = \`
              <div class="col-span-full resource-card">
                <div class="py-12 text-center space-y-4">
                  <svg class="h-16 w-16 text-muted-foreground mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                  </svg>
                  <p class="text-lg text-muted-foreground">Authentication required to view resources.</p>
                  <a href="/login" class="btn btn-primary inline-flex">
                    <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Sign In
                  </a>
                </div>
              </div>
            \`;
            return;
          }
          throw new Error('Failed to load resources');
        }

        const data = await response.json();
        const resources = data.resources || [];

        const container = document.getElementById('resourcesContainer');
        
        if (resources.length > 0) {
          container.innerHTML = resources.map(resource => {
            const category = resource.category || 'general';
            const categoryColors = {
              video: 'bg-forest-accent/20 text-forest-accent border-forest-accent/30',
              document: 'bg-forest-secondary/20 text-forest-secondary border-forest-secondary/30',
              default: 'bg-forest-primary/20 text-forest-primary border-forest-primary/30'
            };
            const colorClass = categoryColors[category.toLowerCase()] || categoryColors.default;
            
            return \`
              <div class="resource-card">
                <div class="resource-card-header">
                  <div class="flex items-start justify-between gap-2 mb-3">
                    <svg class="h-6 w-6 text-forest-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    <span class="badge \${colorClass}">\${category}</span>
                  </div>
                  <h3 class="resource-card-title">\${resource.title || 'Untitled Resource'}</h3>
                </div>
                <div class="resource-card-content">
                  <p class="resource-card-description">
                    \${resource.content || resource.description || 'No description available.'}
                  </p>
                  \${resource.source ? \`
                    <a href="\${resource.source}" target="_blank" rel="noopener noreferrer" class="btn btn-outline w-full mt-4">
                      <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                      </svg>
                      View Resource
                    </a>
                  \` : ''}
                </div>
              </div>
            \`;
          }).join('');
        } else {
          container.innerHTML = \`
            <div class="col-span-full resource-card">
              <div class="py-12 text-center">
                <svg class="h-12 w-12 text-muted-foreground mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <p class="text-lg text-muted-foreground">No resources available yet. Check back soon for educational materials and conservation guides.</p>
              </div>
            </div>
          \`;
        }
      } catch (error) {
        console.error('Error loading resources:', error);
        document.getElementById('resourcesContainer').innerHTML = \`
          <div class="col-span-full resource-card">
            <div class="py-12 text-center">
              <p class="text-lg text-muted-foreground">Error loading resources. Please try again later.</p>
            </div>
          </div>
        \`;
      }
    }

    // Load resources on page load
    loadResources();
  </script>
</body>
</html>
