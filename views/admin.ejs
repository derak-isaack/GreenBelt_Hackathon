<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Forest Tracker - Admin Portal' %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dark">
  <%- include('partials/header', { currentPath: typeof currentPath !== 'undefined' ? currentPath : '/admin', role: typeof role !== 'undefined' ? role : null }) %>

  <main class="flex-1">
<div class="relative min-h-screen bg-light-surface">
  <div class="relative pt-32 pb-20 px-4">
    <div class="container mx-auto max-w-7xl">
      <div class="section-header mb-12">
        <h1 class="section-title">Admin <span class="text-forest-primary">Portal</span></h1>
        <p class="section-description">
          Manage whistleblower reports and upload research resources.
        </p>
      </div>

      <!-- File Upload Section -->
      <div class="space-y-6 mb-12">
        <h2 class="text-2xl font-bold text-foreground flex items-center gap-2">
          <svg class="h-6 w-6 text-forest-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          Upload Research Resources
        </h2>
        <div class="card bg-card/80 backdrop-blur-sm border-forest-border">
          <div class="card-header">
            <h3 class="card-title">File Upload</h3>
            <p class="text-sm text-muted-foreground">Upload documents (PDF, DOC, DOCX) for researchers. Max file size: 10MB.</p>
          </div>
          <div class="space-y-4">
            <form id="uploadForm" enctype="multipart/form-data">
              <div class="flex items-center gap-4">
                <input type="file" id="fileInput" name="file" accept=".pdf,.doc,.docx" class="flex-1 px-3 py-2 bg-card border border-forest-border rounded-md text-foreground file:mr-4 file:py-2 file:px-4 file:rounded-l-md file:border-0 file:text-sm file:font-semibold file:bg-forest-primary file:text-white hover:file:bg-forest-primary/80">
                <button type="submit" id="uploadBtn" class="px-6 py-2 bg-forest-primary text-white rounded-md hover:bg-forest-primary/80 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                  Upload
                </button>
              </div>
            </form>
            <div id="uploadStatus" class="text-sm"></div>
          </div>
        </div>

        <!-- Uploaded Files List -->
        <div class="card bg-card/80 backdrop-blur-sm border-forest-border">
          <div class="card-header">
            <h3 class="card-title">Uploaded Resources</h3>
          </div>
          <div id="uploadsList" class="space-y-4">
            <div class="text-center py-6 text-muted-foreground">
              <span class="spinner"></span>
              <p class="mt-4">Loading uploaded files...</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Whistleblower Reports Section -->
      <div class="space-y-6">
        <h2 class="text-2xl font-bold text-foreground flex items-center gap-2">
          <svg class="h-6 w-6 text-forest-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Whistleblower Reports
        </h2>

        <div id="reportsList" class="space-y-4">
          <div class="text-center py-12">
            <span class="spinner"></span>
            <p class="text-muted-foreground mt-4">Loading reports...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  </main>

  <%- include('partials/footer') %>

  <script src="/js/forest-background.js"></script>

  <script>
  const reportsContainer = document.getElementById('reportsList');
  const uploadsContainer = document.getElementById('uploadsList');
  const uploadForm = document.getElementById('uploadForm');
  const uploadBtn = document.getElementById('uploadBtn');
  const fileInput = document.getElementById('fileInput');
  const uploadStatus = document.getElementById('uploadStatus');

  function renderReportCards(reports) {
    if (!reports.length) {
      reportsContainer.innerHTML = `
        <div class="card bg-card/80 backdrop-blur-sm border-forest-border">
          <div class="py-12 text-center">
            <p class="text-lg text-muted-foreground">No reports submitted yet.</p>
          </div>
        </div>
      `;
      return;
    }

    reportsContainer.innerHTML = reports.map((report) => {
      const date = new Date(Number(report.timestamp) / 1000000);

      return `
        <div class="card bg-card/80 backdrop-blur-sm border-forest-border hover:border-forest-primary/50 transition-all duration-300">
          <div class="p-6">
            <div class="flex flex-col gap-4">
              <div class="flex items-start justify-between">
                <div class="flex items-center gap-2">
                  <span class="font-semibold text-foreground">${report.location || 'Unknown'}</span>
                  <span class="text-xs text-muted-foreground">Hashed ID: ${report.id}</span>
                </div>
                <span class="text-xs text-muted-foreground whitespace-nowrap">
                  ${date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' })}
                </span>
              </div>
              <div class="space-y-2">
                <h4 class="font-medium text-foreground">Incident Details:</h4>
                <p class="text-sm text-muted-foreground whitespace-pre-wrap">${report.incidentDetails || report.report || ''}</p>
              </div>
            </div>
          </div>
        </div>
      `;
    }).join('');
  }

  function renderUploadsList(uploads) {
    if (!uploads.length) {
      uploadsContainer.innerHTML = `
        <div class="py-6 text-center">
          <p class="text-lg text-muted-foreground">No files uploaded yet.</p>
        </div>
      `;
      return;
    }

    uploadsContainer.innerHTML = uploads.map((upload) => {
      const uploadDate = new Date(upload.upload_date);
      const fileSizeMB = (upload.file_size / (1024 * 1024)).toFixed(2);

      return `
        <div class="flex items-center justify-between p-4 border border-forest-border rounded-md bg-card/50">
          <div class="flex-1">
            <div class="flex items-center gap-2">
              <span class="font-medium text-foreground">${upload.original_filename}</span>
              <span class="text-xs text-muted-foreground">(${fileSizeMB} MB)</span>
            </div>
            <p class="text-xs text-muted-foreground">Uploaded: ${uploadDate.toLocaleDateString()}</p>
          </div>
          <div class="flex gap-2">
            <a href="/${upload.file_path}" target="_blank" class="px-3 py-1 text-xs bg-forest-primary text-white rounded hover:bg-forest-primary/80 transition-colors">
              View
            </a>
            <a href="/${upload.file_path}" download class="px-3 py-1 text-xs bg-muted text-foreground rounded hover:bg-muted/80 transition-colors">
              Download
            </a>
          </div>
        </div>
      `;
    }).join('');
  }

  async function loadReports() {
    try {
      const response = await fetch('/api/whistle/reports');
      if (!response.ok) throw new Error('Failed to load reports');
      const reports = await response.json();
      renderReportCards(reports);
    } catch (error) {
      console.error('Error loading reports:', error);
      reportsContainer.innerHTML = `
        <div class="card bg-card/80 backdrop-blur-sm border-forest-border">
          <div class="py-12 text-center">
            <p class="text-lg text-muted-foreground">Unable to load reports. Please try again.</p>
          </div>
        </div>
      `;
    }
  }

  async function loadUploads() {
    try {
      const response = await fetch('/api/admin/uploads');
      if (!response.ok) throw new Error('Failed to load uploads');
      const uploads = await response.json();
      renderUploadsList(uploads);
    } catch (error) {
      console.error('Error loading uploads:', error);
      uploadsContainer.innerHTML = `
        <div class="py-6 text-center">
          <p class="text-lg text-muted-foreground">Unable to load uploads. Please try again.</p>
        </div>
      `;
    }
  }

  // Handle file upload
  uploadForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    const file = fileInput.files[0];
    if (!file) {
      uploadStatus.innerHTML = '<p class="text-red-500">Please select a file to upload.</p>';
      return;
    }

    const formData = new FormData();
    formData.append('file', file);

    uploadBtn.disabled = true;
    uploadBtn.textContent = 'Uploading...';
    uploadStatus.innerHTML = '<p class="text-muted-foreground">Uploading file...</p>';

    try {
      const response = await fetch('/api/admin/upload', {
        method: 'POST',
        body: formData
      });

      const result = await response.json();

      if (response.ok) {
        uploadStatus.innerHTML = '<p class="text-green-600">File uploaded successfully!</p>';
        fileInput.value = '';
        loadUploads(); // Refresh the uploads list
      } else {
        uploadStatus.innerHTML = `<p class="text-red-500">Upload failed: ${result.error}</p>`;
      }
    } catch (error) {
      console.error('Upload error:', error);
      uploadStatus.innerHTML = '<p class="text-red-500">Upload failed. Please try again.</p>';
    } finally {
      uploadBtn.disabled = false;
      uploadBtn.textContent = 'Upload';
    }
  });

  // Load data on page load
  loadReports();
  loadUploads();

  // Auth check
  (function() {
    const authToken = localStorage.getItem('authToken');
    const isLoginPage = window.location.pathname === '/login';
    console.log('Admin auth check: authToken present:', !!authToken);

    if (!authToken && !isLoginPage) {
      console.log('Admin auth check: redirecting to login');
      const currentPath = window.location.pathname;
      window.location.href = '/login?redirect=' + encodeURIComponent(currentPath);
    } else {
      console.log('Admin auth check: auth ok, staying on page');
    }
  })();
  </script>

</body>
</html>